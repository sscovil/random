{
  "name": "@sscovil/random",
  "version": "1.2.0",
  "description": "An assortment of useful random number functions.",
  "main": "random.js",
  "files": ["lib/**/*"],
  "repository": "https://github.com/sscovil/random",
  "homepage": "https://github.com/sscovil/random#readme",
  "bugs": "https://github.com/sscovil/random/issues",
  "author": "Shaun Scovil <sscovil@gmail.com>",
  "license": "MITNFA",
  "keywords": [
    "random",
    "utility",
    "number",
    "array",
    "color",
    "distribute"
  ],
  "type": "module",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write --list-different \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --no-cache"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "modulePathIgnorePatterns": [
      "/dist/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "\\.[jt]sx?$": "ts-jest"
    }
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.20",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.5"
  }
}
